{
  "hosting": {
    "site": "the-couch-coaches",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "**/*",
        "headers": [
          { "key": "Cache-Control", "value": "max-age=60" }
        ]
      }
    ]
  }
}
